{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
    <h1>Adresse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adress_number</th>
                <th>Street</th>
                <th>City</th>
                <th>Postal</th>
                <th>Countries</th>
                <th>Adress_complement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.adressNumber }}</td>
                <td>{{ adresse.street }}</td>
                <td>{{ adresse.city }}</td>
                <td>{{ adresse.postal }}</td>
                <td>{{ adresse.countries }}</td>
                <td>{{ adresse.adressComplement }}</td>
                <td>
                    <a href="{{ path('app_adresse_show', {'id': adresse.id}) }}">show</a>
                    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresse_new') }}">Create new</a>
{% endblock %}
