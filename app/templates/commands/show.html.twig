{% extends 'base.html.twig' %}

{% block title %}Commands{% endblock %}

{% block body %}
    <h1>Commands</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ command.status }}</td>
            </tr>
            <tr>
                <th>Order_date</th>
                <td>{{ command.orderDate ? command.orderDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ command.totalPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commands_index') }}">back to list</a>

    <a href="{{ path('app_commands_edit', {'id': command.id}) }}">edit</a>

    {{ include('commands/_delete_form.html.twig') }}
{% endblock %}
